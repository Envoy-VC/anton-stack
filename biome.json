{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "extends": ["ultracite"],
  "files": {
    "ignore": ["dist/**/*", "node_modules/**/*", ".next/**/*", ".turbo/**/*"]
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noConsole": "off",
        "noConsoleLog": "off"
      }
    }
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single"
    }
  }
}
